{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "Components/*": ["./src/app/ui/components/*"],
      "app/*": ["./src/app/*"],
      "test/*": ["./src/test/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
